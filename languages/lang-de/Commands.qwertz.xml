<?xml version="1.0" encoding="utf-8"?>
<!--
	Adjusting default keybinds for QWERTZ keyboards (e.g. German)

	trying to avoid dead keys, AltGr, and cp437 conflicts
-->
<commands Lang="de">
  
  <command ID="CmdMoveU">
    <!-- binding to the '<' key, which is an OEM thing on QWERTZ -->
    <keyboardBind Key="OEM1"/>
  </command>
  <command ID="CmdMoveD">
    <!-- binding to the '>' key, which is an OEM thing on QWERTZ -->
    <keyboardBind Modifier="shift" Key="OEM1"/>
  </command>

  <command ID="V Positive">
    <!-- QWERTZ plus key is where ']' is on US standard -->
    <keyboardBind Key="equals" Load="Remove"/>
    <keyboardBind Key="rightBracket"/>
  </command>
  <command ID="V Negative">
    <!-- QWERTZ minus key is where forward slash is on US standard -->
    <keyboardBind Key="minus" Load="Remove"/>
    <keyboardBind Key="slash"/>
  </command>

  <!-- US backquote is a dead key in QWERTZ, but keeping as an option
    let's try adding equals, which is shift+0 -->
  <command ID="CmdWaitUntilHealed">
    <!-- <keyboardBind Key="backquote" Load="Remove"/> -->
    <keyboardBind Modifier="shift" Key="0"/>
  </command>
  <command ID="CmdWaitMenu">
    <!-- <keyboardBind Modifier="ctrl" Key="backquote" Load="Remove"/> -->
    <keyboardBind Modifier="ctrl,shift" Key="0"/>
  </command>

  <command ID="CmdTradeAdd">
    <!-- QWERTZ plus key is where ']' is on US standard -->
    <keyboardBind Key="equals" Load="Remove"/>
    <keyboardBind Key="rightBracket"/>
  </command>
  <command ID="CmdTradeRemove">
    <!-- QWERTZ minus key is where forward-slash is on US standard -->
    <keyboardBind Key="minus" Load="Remove"/>
    <keyboardBind Key="slash"/>
  </command>

</commands>
