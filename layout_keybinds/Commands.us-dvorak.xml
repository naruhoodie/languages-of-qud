<?xml version="1.0" encoding="utf-8"?>
<!--
	Adjusting default keybinds for US Dvorak keyboards
-->
<commands>
  <command ID="CmdMoveU">
    <keyboardBind Modifier="shift" Key="comma" Load="Replace"/>
    <keyboardBind Modifier="shift" Key="w"/>
    <keyboardBind Key="s" Load="Replace"/>
    <keyboardBind Key="semicolon"/>
  </command>
  <command ID="CmdMoveD">
    <keyboardBind Modifier="shift" Key="period" Load="Replace"/>
    <keyboardBind Modifier="shift" Key="e"/>
    <keyboardBind Key="d"/>
    <keyboardBind Key="h"/>
  </command>
  
  <command ID="CmdAttackU">
    <keyboardBind Modifier="ctrl,shift" Key="period" Load="Replace"/>
    <keyboardBind Modifier="ctrl,shift" Key="e"/>
  </command>
  <command ID="CmdAttackD">
    <keyboardBind Modifier="ctrl,shift" Key="comma" Load="Replace"/>
    <keyboardBind Modifier="ctrl,shift" Key="w"/>
  </command>

<!-- let's try left/right brackets for these (minus/equals) -->  
  <command ID="Category Right">
    <keyboardBind Key="E" Load="Replace"/>
    <keyboardBind Key="minus"/>
  </command>
  <command ID="Category Left">
    <keyboardBind Key="Q" Load="Replace"/>
    <keyboardBind Key="equals"/>
  </command>  

  <command ID="V Positive">
    <keyboardBind Key="equals" Load="Replace"/>
    <keyboardBind Key="rightBracket"/>
  </command>
  <command ID="V Negative">
    <keyboardBind Key="minus" Load="Replace"/>
    <keyboardBind Key="quote"/>
  </command>
  <command ID="CmdFilter">
    <keyboardBind Modifier="ctrl" Key="f" Load="Replace"/>
    <keyboardBind Modifier="ctrl" Key="y"/>
  </command>

  <command ID="CmdTalk">
